generator client {
  provider = "prisma-client-js"
  url      = env("DATABASE_URL")
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          String   @id @default(uuid())
  title       String
  description String
  thumbnail   String
  createdAt   DateTime @default(now())
  duration    String
  category    String?
}

model Blog {
  id         String   @id @default(uuid())
  title      String
  content    String
  coverImage String
  category   String?
  date       DateTime @default(now())
}

model ContactRequest {
  id      String   @id @default(uuid())
  name    String
  email   String
  date    DateTime
  time    DateTime
  message String
}
